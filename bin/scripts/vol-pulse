#!/bin/sh

STEP=10%

pactl set-sink-mute @DEFAULT_SINK@ false
case $1 in
	M) pactl set-sink-volume @DEFAULT_SINK@ 100%;;
	m) pactl set-sink-volume @DEFAULT_SINK@ 0%;;
	+ | -) pactl set-sink-volume @DEFAULT_SINK@ "$1"$STEP;;
esac

VOLUME="$(sb-vol-pulse)"
NAME='volume'

notify-send \
	-a $NAME \
	$NAME "$VOLUME"
