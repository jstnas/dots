#!/bin/sh

STEP=10
TIMEOUT=1000

case $1 in
	M) backlight_control 100;;
	m) backlight_control 0;;
	+ | -) backlight_control "$1$STEP";;
	*) backlight_control "$1";;
esac

BACKLIGHT=$(sb-bl)
NAME='backlight'

notify-send \
	-a $NAME \
	-h "string:x-canonical-private-synchronous:$NAME" \
	-t $TIMEOUT \
	$NAME "$BACKLIGHT"
