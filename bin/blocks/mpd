#!/bin/sh -e
# Print title if song has one, otherwise print the file name
TITLE="$(mpc current -f '%title%')"
if [ -n "$TITLE" ]; then
	printf "$TITLE\n"
else
	printf "$(mpc current -f '%file%' | cut -d. -f1 | rev | cut -d/ -f1 | rev)\n"
fi


case $BUTTON in
	1)
		mpc toggle
		;;
	2)
		mpc update
		;;
	3)
		st ncmpcpp &
		;;
esac
